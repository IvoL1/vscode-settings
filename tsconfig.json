{
  "compilerOptions": {
    // =============================================================================
    // üéØ TARGET E M√ìDULOS - Configura√ß√µes b√°sicas de compila√ß√£o
    // =============================================================================
    "target": "ES2022", // Vers√£o JS de destino - ES2022 √© mais compat√≠vel
    "module": "ESNext", // Sistema de m√≥dulos moderno
    "moduleResolution": "bundler", // Resolu√ß√£o moderna para bundlers
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // Bibliotecas dispon√≠veis

    // =============================================================================
    // üìÅ CAMINHOS E RESOLU√á√ÉO - Como encontrar arquivos
    // =============================================================================
    "baseUrl": "./", // Diret√≥rio base para imports relativos
    "rootDir": "./src", // Pasta raiz do c√≥digo fonte
    "outDir": "./dist", // Pasta de sa√≠da da compila√ß√£o
    "resolveJsonModule": true, // Permite importar arquivos JSON

    // =============================================================================
    // üîÑ INTEROPERABILIDADE - Compatibilidade entre m√≥dulos
    // =============================================================================
    "esModuleInterop": true, // Compatibilidade ES modules com CommonJS
    "allowSyntheticDefaultImports": true, // Permite default imports sint√©ticos
    "forceConsistentCasingInFileNames": true, // For√ßa consist√™ncia em nomes de arquivos
    "allowJs": true, // Permite arquivos JavaScript no projeto
    "checkJs": false, // N√£o verifica tipos em arquivos JS (performance)

    // =============================================================================
    // üö® TYPE CHECKING - Verifica√ß√£o rigorosa de tipos
    // =============================================================================
    "strict": true, // Ativa TODAS as verifica√ß√µes r√≠gidas
    "noImplicitAny": true, // Pro√≠be tipos 'any' impl√≠citos
    "strictNullChecks": true, // Verifica√ß√£o rigorosa de null/undefined
    "strictFunctionTypes": true, // Verifica√ß√£o rigorosa de tipos de fun√ß√£o
    "noImplicitReturns": true, // Todas as fun√ß√µes devem retornar valor
    "noFallthroughCasesInSwitch": true, // Pro√≠be fallthrough em switch sem break
    "noUncheckedIndexedAccess": true, // Tipos mais seguros para acesso por √≠ndice
    "exactOptionalPropertyTypes": true, // Propriedades opcionais mais precisas

    // =============================================================================
    // üßπ LIMPEZA DE C√ìDIGO - Remove c√≥digo n√£o utilizado
    // =============================================================================
    "noUnusedLocals": true, // Erro para vari√°veis locais n√£o utilizadas
    "noUnusedParameters": true, // Erro para par√¢metros n√£o utilizados
    "noImplicitOverride": true, // For√ßa uso de 'override' keyword

    // =============================================================================
    // üì§ GERA√á√ÉO DE ARQUIVOS - Como gerar os arquivos compilados
    // =============================================================================
    "declaration": true, // Gera arquivos .d.ts para tipagem
    "declarationMap": true, // Mapeia declara√ß√µes para debugging
    "sourceMap": true, // Gera source maps para debugging
    "removeComments": true, // Remove coment√°rios do c√≥digo compilado
    "noEmitOnError": true, // N√£o gera arquivos se houver erros

    // =============================================================================
    // ‚ö° PERFORMANCE - Otimiza√ß√µes de compila√ß√£o
    // =============================================================================
    "skipLibCheck": true, // Pula verifica√ß√£o de tipos em node_modules
    "incremental": true, // Compila√ß√£o incremental (mais r√°pida)
    "isolatedModules": true, // Cada arquivo como m√≥dulo isolado

    // =============================================================================
    // üîß CONFIGURA√á√ïES MODERNAS - Para bundlers e ferramentas atuais
    // =============================================================================
    "moduleDetection": "force", // For√ßa detec√ß√£o de m√≥dulos
    "verbatimModuleSyntax": false // Permite transforma√ß√µes de sintaxe
  },

  // =============================================================================
  // üìÇ INCLUS√ÉO E EXCLUS√ÉO - Quais arquivos processar
  // =============================================================================
  "include": [
    "src/**/*", // Inclui todos os arquivos da pasta src
    "types/**/*" // Inclui defini√ß√µes de tipos customizadas
  ],
  "exclude": [
    "node_modules", // Exclui depend√™ncias
    "dist", // Exclui pasta de build
    "**/*.test.ts", // Exclui arquivos de teste
    "**/*.spec.ts" // Exclui arquivos de especifica√ß√£o
  ]
}
